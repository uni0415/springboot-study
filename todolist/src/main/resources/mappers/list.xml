<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.springboot.todolist.domain.ToDoListRepository">
  	<resultMap type="HashMap" id="listMap">
  		<id column="id" property="id"/>
  		<id column="usercode" property="usercode"/>
  		<id column="name" property="name"/>
  		<id column="content" property="content"/>
  		<id column="create_date" property="create_date"/>
  		<id column="update_date" property="update_date"/>
  	</resultMap>
  	<insert id="addToDoList" parameterType="com.springboot.todolist.domain.ToDoListMst">
  		insert into
  			todolist_mst
  		values(
  			0,
  			#{usercode},
  			#{content},
  			now(),
  			now()
  		)
  	</insert>
  	
  	<select id="getListAll" parameterType="Integer" resultMap="listMap">
  		<!-- select
  			id,
  			content
  		from
  			todolist_mst
  		where 
  			usercode = #{usercode} -->
  		
  		select
  			um.name,
  			tm.id,
  			tm.usercode,
  			tm.content
  		from
  			user_mst um
  			left outer join todolist_mst tm on um.usercode = tm.usercode
  		where
  			tm.usercode = #{usercode}
  			
  	</select>

  	<update id="updateToDoList" parameterType="com.springboot.todolist.domain.ToDoListMst">
  		update
  			todolist_mst
  		set
  			content = #{content}
  		where
  			id = #{id}
  	</update>
  	
  	<delete id="deleteList" parameterType="Integer">
  		delete
  			from
  				todolist_mst
  		where
  			id = #{id}
  	</delete>
  	
  </mapper>